                                        <include>movie-loader-jar-with-dependencies.jar</include>
                                    </includes>
                                </resource>
                                <resource>
                                    <directory>
                                        ${project.parent.basedir}/movie-loader/target/classes
                                    </directory>
                                    <includes>
                                        <include>*.xml</include>
                                        <include>*.sh</include>
                                    </includes>
                                </resource>
                            </resources>
                        </configuration>
                    </execution>

                    <execution>
                        <id>copy-movie-streams</id>
                        <phase>process-resources</phase>
                        <goals>
                            <goal>copy-resources</goal>
